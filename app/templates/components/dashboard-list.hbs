<div class="list">
	<div class="row">
		<div class="col-xs-10">
			<h2>{{list.title}}</h2>
		</div>
		<div class="col-xs-2">
			<button class="btn btn-link glyphicon glyphicon-plus" {{action "showForm"}}></button>
		</div>

	</div>

	<div class="todos">
		<div class="form-hide">
			<form {{action "addItem" on="submit"}}>
				{{textarea class="form-control" value=itemDescription}}
				<div class="actions">
					<button class="btn btn-success" type="submit">AÃ±adir</button>
					<button class="btn btn-link glyphicon glyphicon-remove" {{action "hideForm"}}></button>
				</div>
			</form>
		</div>
		{{#each list.items as |item|}}
		{{#dashboard-item item=item}} {{/dashboard-item}}
		{{/each}}
	</div>

	<div class="actions text-center">
		<button class="btn btn-danger" {{action "delete"}}>
			Eliminar lista
		</button>
	</div>

</div>
